<Application x:Class="PROJEKT_WPF_AK_RD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PROJEKT_WPF_AK_RD" xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="/MainWindow.xaml">
    <Application.Resources>
        <!-- Kolory bazowe -->
        <Color x:Key="PrimaryColor">#4A90E2</Color>
        <Color x:Key="SecondaryColor">#F5A623</Color>
        <Color x:Key="Success">#7ED321</Color>
        <Color x:Key="Error">#D0021B</Color>
        <Color x:Key="Background">#F9F9F9</Color>
        <Color x:Key="Panel">#FFFFFF</Color>
        <Color x:Key="TextPrimary">#333333</Color>
        <Color x:Key="TextSecondary">#777777</Color>
        <Color x:Key="GradientStart">#4FA0EA</Color>
        <Color x:Key="GradientEnd">#4170C2</Color>
        <Color x:Key="ButtonPrimary">#444444</Color>
        <Color x:Key="ButtonSecondary">#666666</Color>
        <Color x:Key="ErrorColor">#FFB00020</Color>

        <!-- Brush (do użycia w kontrolkach) -->
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
        <SolidColorBrush x:Key="ButtonPrimaryBrush" Color="{StaticResource ButtonPrimary}" />
        <SolidColorBrush x:Key="ButtonSecondaryBrush" Color="{StaticResource ButtonSecondary}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource ButtonSecondary}" />
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
        

        <!-- Domyślne style dla obiektów -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="ComicSans" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="ComicSans" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource ButtonSecondaryBrush}" />
            <Setter Property="Background" Value="{StaticResource ButtonPrimaryBrush}" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="ComicSans" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="ComicSans" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="FontFamily" Value="ComicSans" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>
    </Application.Resources>
</Application>
