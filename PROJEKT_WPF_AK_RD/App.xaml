<Application x:Class="PROJEKT_WPF_AK_RD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PROJEKT_WPF_AK_RD"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="/MainWindow.xaml">
    
    <Application.Resources>
        <!-- Kolory bazowe -->
        <Color x:Key="PrimaryColor">#1D1A5F</Color>
        <Color x:Key="SecondaryColor">#F5A623</Color>
        <Color x:Key="Success">#7ED321</Color>
        <Color x:Key="Error">#D0021B</Color>
        <Color x:Key="Background">#F9F9F9</Color>
        <Color x:Key="Panel">Black</Color>
        <Color x:Key="TextPrimary">Black</Color>
        <Color x:Key="TextSecondary">#777777</Color>
        <Color x:Key="GradientStart">White</Color>
        <Color x:Key="GradientEnd">White</Color>
        <Color x:Key="ButtonPrimary">#2979FF</Color>
        <Color x:Key="ButtonSecondary">#2979FF</Color>
        <Color x:Key="ErrorColor">#FFB00020</Color>

        <!-- Brush (do użycia w kontrolkach) -->
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
        <SolidColorBrush x:Key="ButtonPrimaryBrush" Color="{StaticResource ButtonPrimary}" />
        <SolidColorBrush x:Key="ButtonSecondaryBrush" Color="{StaticResource ButtonSecondary}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource ButtonSecondary}" />
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

        <!-- Domyślne style dla obiektów -->

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="ComicSans MS" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="ComicSans MS" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="ComicSans MS" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource ButtonSecondaryBrush}" />
            <Setter Property="Background" Value="{StaticResource ButtonPrimaryBrush}" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="ComicSans MS" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>
        
        <Style TargetType="ListBox">
            <Setter Property="FontFamily" Value="ComicSans MS" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Background" Value="LightGray" />
        </Style>

    </Application.Resources>
</Application>
