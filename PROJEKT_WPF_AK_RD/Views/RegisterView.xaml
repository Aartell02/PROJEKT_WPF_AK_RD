<UserControl x:Class="PROJEKT_WPF_AK_RD.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROJEKT_WPF_AK_RD.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Width="260"
    Orientation="Vertical"
    Margin="0,35,0,0">

        <TextBlock Text="Register"
                    FontSize="25"
                    HorizontalAlignment="Center"/>

        <TextBlock Text="Username" Margin="0,35,0,0"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="{StaticResource TextPrimaryBrush}"
                    BorderThickness="0,0,0,2"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Margin="0,5,0,0"
                    Padding="20,0,0,0">

        </TextBox>
        <TextBlock Text="Password" Margin="0,15,0,0"/>
        <PasswordBox   x:Name="txtPass" PasswordChanged="PasswordBox_PasswordChanged"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="Transparent"
                    CaretBrush="LightGray"
                    BorderBrush="{StaticResource TextPrimaryBrush}"
                    BorderThickness="0,0,0,2"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Margin="0,5,0,0"
                    Padding="20,0,0,0">
        </PasswordBox>
        <TextBlock Text="Repeat Password" Margin="0,15,0,0"/>
        <PasswordBox   x:Name="txtPass2" PasswordChanged="RepeatPasswordBox_PasswordChanged"
            FontSize="13"
            FontWeight="Medium"
            FontFamily="Montserrat"                            
            Foreground="Transparent"
            CaretBrush="LightGray"
            BorderBrush="{StaticResource TextPrimaryBrush}"
            BorderThickness="0,0,0,2"
            Height="28"
            VerticalContentAlignment="Center"
            Margin="0,5,0,0"
            Padding="20,0,0,0">
        </PasswordBox>
        <Button                         
                BorderThickness="0"
                Content="REGISTER"
                Cursor="Hand"                           
                Margin="0,50,0,0"
                Command="{Binding RegisterCommand}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="{StaticResource ButtonPrimaryBrush}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonPrimaryBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="150" Height="40"
                            CornerRadius="20"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</UserControl>
