<Window x:Class="PROJEKT_WPF_AK_RD.Views.PlayQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayQuizWindow" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <TextBlock x:Name="QuestionTextBlock" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20" 
                   FontSize="20" 
                   TextWrapping="Wrap" 
                   Text="Question" 
                   TextAlignment="Center"/>

            <TextBlock x:Name="ScoreTextBlock" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,10,10" 
                   FontSize="16" 
                   Foreground="DarkSlateGray"/>

            <UniformGrid Columns="2" Rows="2" Margin="0,10" HorizontalAlignment="Center" Width="553" Height="206">
                <Button x:Name="AnswerButton1" 
                    Margin="10" 
                    FontSize="16" 
                    Padding="10" 
                    Background="White" 
                    BorderBrush="Black" 
                    BorderThickness="1"
                    Click="AnswerButton_Click"/>
                <Button x:Name="AnswerButton2" 
                    Margin="10" 
                    FontSize="16" 
                    Padding="10" 
                    Background="White" 
                    BorderBrush="Black" 
                    BorderThickness="1"
                    Click="AnswerButton_Click"/>
                <Button x:Name="AnswerButton3" 
                    Margin="10" 
                    FontSize="16" 
                    Padding="10" 
                    Background="White" 
                    BorderBrush="Black" 
                    BorderThickness="1"
                    Click="AnswerButton_Click"/>
                <Button x:Name="AnswerButton4" 
                    Margin="10" 
                    FontSize="16" 
                    Padding="10" 
                    Background="White" 
                    BorderBrush="Black" 
                    BorderThickness="1"
                    Click="AnswerButton_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>

</Window>
